{
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        {
            "language": "vue",
            "autoFix": true
        }
    ],
    "[vue]": {
        "editor.formatOnSave": false
    },
    "[javascript]": {
        "editor.formatOnSave": false
    },
    "files.autoSave": "afterDelay",

    "extensions.showRecommendationsOnlyOnDemand": false,
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },
    "emmet.includeLanguages": {
        "edge": "html",
        "vue-html": "html",
            "vue": "html"
    },
}